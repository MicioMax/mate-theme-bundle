{
  "name": "contao-themes-net/mate-theme-bundle",
  "type":"contao-bundle",
  "description": "mate theme bundle for Contao 4",
  "keywords":["contao","theme","template"],
  "homepage": "https://contao-themes.net",
  "license": "pdir contao theme licence",
  "authors": [
    {
      "name": "Webdesign fÃ¼r Dresden",
      "homepage": "https://pdir.de",
      "email" : "develop@pdir.de",
      "role" : "Developer"
    },
    {
      "name": "Kostenlose Contao Themes",
      "homepage": "https://contao-themes.net",
      "email" : "develop@pdir.de",
      "role" : "Supplier"
    }
  ],
  "support" : {
    "email" : "develop@pdir.de",
    "issues" : "https://github.com/contao-themes-net/mate-theme-bundle/issues",
    "source" : "https://github.com/contao-themes-net/mate-theme-bundle"
  },
  "require": {
    "php": ">=7.0.0",
    "contao/core-bundle": "^4.4",
    "pdir/contao-theme-helper-bundle": "^1.0"
  },
  "conflict": {
    "contao/core": "*"
  },
  "autoload": {
    "psr-4": {
      "ContaoThemesNet\\MateThemeBundle\\": "src"
    },
    "classmap": [
      "src/Resources/contao/"
    ],
    "exclude-from-classmap": [
      "src/Resources/contao/config/",
      "src/Resources/contao/dca/",
      "src/Resources/contao/languages/",
      "src/Resources/contao/templates/"
    ]
  },
  "extra": {
    "contao-manager-plugin": "ContaoThemesNet\\MateThemeBundle\\ContaoManager\\Plugin"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('files/mate/_custom_variables.scss') || copy('src/Resources/public/sass/_csutom_variables.scss', 'files/mate/_custom_variables.scss');\"",
      "php -r \"file_exists('files/mate/img/Screenshot.png') || copy('src/Resources/public/img/Screenshot.png', 'files/mate/img/Screenshot.png');\""
    ],
    "post-install-cmd": [
      "Contao\\ManagerBundle\\Composer\\ScriptHandler::initializeApplication"
    ],
    "post-update-cmd": [
      "Contao\\ManagerBundle\\Composer\\ScriptHandler::initializeApplication"
    ]
  }
}
