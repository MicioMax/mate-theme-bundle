{
  "name": "contao-themes-net/mate-theme-bundle",
  "type":"contao-bundle",
  "description": "mate theme bundle for Contao 4",
  "keywords":["contao","theme","template"],
  "homepage": "https://contao-themes.net",
  "license": "pdir contao theme licence",
  "authors": [
    {
      "name": "Webdesign fÃ¼r Dresden",
      "homepage": "https://pdir.de",
      "email" : "develop@pdir.de",
      "role" : "Developer"
    },
    {
      "name": "Kostenlose Contao Themes",
      "homepage": "https://contao-themes.net",
      "email" : "develop@pdir.de",
      "role" : "Supplier"
    }
  ],
  "support" : {
    "email" : "develop@pdir.de",
    "issues" : "https://github.com/contao-themes-net/mate-theme-bundle/issues",
    "source" : "https://github.com/contao-themes-net/mate-theme-bundle"
  },
  "require": {
    "php": ">=7.0.0",
    "contao/core-bundle": "^4.4",
    "pdir/contao-theme-helper-bundle": "^1.0",
    "contao-dd/advanced-classes-bundle": "^0.5",
    "contao-bootstrap/grid": "2.0.0-beta3"
  },
  "conflict": {
    "contao/core": "*"
  },
  "autoload": {
    "psr-4": {
      "ContaoThemesNet\\MateThemeBundle\\": "src/"
    },
    "classmap": [
      "src/Resources/contao/"
    ],
    "exclude-from-classmap": [
      "src/Resources/contao/config/",
      "src/Resources/contao/dca/",
      "src/Resources/contao/languages/",
      "src/Resources/contao/templates/"
    ]
  },
  "extra": {
    "contao-manager-plugin": "ContaoThemesNet\\MateThemeBundle\\ContaoManager\\Plugin",
    "contao": {
      "sources": {
        "src/Resources/contao/public": "files/mate1",
        "src/templates/mate": "templates/mate2"
      }
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('files/mate4/_custom_variables.scss') || copy('src/Resources/public/sass/_custom_variables.scss.example', 'files/mate4/_custom_variables.scss');\"",
      "php -r \"file_exists('files/mate5/_custom_variables.scss') || copy('src/Resources/public/sass/_custom_variables.scss.example', 'files/mate5/_custom_variables.scss');\""
    ],
    "post-install-cmd": [
      "ContaoThemesNet\\MateThemeBundle\\Events\\Installer::initialize"
    ],
    "post-update-cmd": [
      "ContaoThemesNet\\MateThemeBundle\\Events\\Installer::initialize"
    ]
  },
  "config": {
    "src/templates/mate": "templates/mate6"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
